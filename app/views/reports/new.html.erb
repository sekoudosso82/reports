<br>
<br>

<% if flash[:errors] %>
    <% flash[:errors].each  do |error| %>
        <%= error %>
    <% end %>
<% end %>

<br>
<br>


<%= form_for @report  do |f| %>
    <br>
    <h2>
        <%= f.label :reporter %>
        <%= f.text_field :reporter %><br>

        <%= f.label :image, "reporter_photo" %>
        <%= f.file_field :image %><br>

        <%= f.label :gender %>  
        <%= f.select(:gender, options_for_select([["Male", "Male"],["Female", "Female"], ["Other", "Other"]],@report.gender), {:include_blank => 'Select Gender'}, { :class => 'form-control' }) %> <br>
        
        <%= f.label :location %>
        <%= f.text_field :location %> <br>

        <%= f.label :description %>
        <%= f.text_field :description %><br>

        <%= f.label :start_date %>
        <%= f.date_field :start_date %><br>

        <%= f.label :end_date %>
        <%= f.date_field :end_date %>

        <%= f.submit %>
    </h2>

<% end %>